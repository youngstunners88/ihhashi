# =============================================================================
# iHhashi Frontend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
# The base URL of the backend API server
# Development: http://localhost:8000
# Staging: https://staging-api.ihhashi.co.za
# Production: https://api.ihhashi.co.za
VITE_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Supabase Configuration (Authentication)
# -----------------------------------------------------------------------------
# Get these from your Supabase project settings
# Project URL: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# -----------------------------------------------------------------------------
# PostHog Analytics (Optional)
# -----------------------------------------------------------------------------
# Analytics and feature flags
# Get your key from: https://app.posthog.com/project/settings
VITE_POSTHOG_KEY=your_posthog_key_here
VITE_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Google Maps (Optional - for location features)
# -----------------------------------------------------------------------------
# Get API key from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Geocoding API, Maps JavaScript API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable/disable features without code changes
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# -----------------------------------------------------------------------------
# App Configuration (Optional)
# -----------------------------------------------------------------------------
# Override app environment (defaults based on VITE_API_URL)
VITE_APP_ENV=development

# Currency symbol (default: R)
VITE_CURRENCY_SYMBOL=R

# Default language (default: en)
VITE_DEFAULT_LANGUAGE=en

# -----------------------------------------------------------------------------
# Build-time Variables (set during build, not runtime)
# -----------------------------------------------------------------------------
# These are baked into the build at compile time

# Firebase Cloud Messaging (push notifications)
# Get these from Firebase Console → Project Settings → Your apps → Web app
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
# Web Push certificate key from Firebase Console → Project Settings → Cloud Messaging → Web Push certificates
VITE_FIREBASE_VAPID_KEY=your_vapid_key

# Sentry/GlitchTip error tracking (optional)
VITE_SENTRY_DSN=

# App version (usually set by CI/CD)
VITE_APP_VERSION=0.3.0
