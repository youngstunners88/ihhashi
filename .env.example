# iHhashi Environment Configuration
# Copy this to .env and fill in your values

# ===== REQUIRED =====
SECRET_KEY=your-secret-key-at-least-32-characters-long-change-this-in-production

# Database
MONGODB_URL=mongodb://localhost:27017
DB_NAME=ihhashi

# Environment
ENVIRONMENT=development
DEBUG=true

# ===== OPTIONAL (for development) =====

# Supabase (Auth & Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Payments - Paystack
PAYSTACK_SECRET_KEY=sk_test_your-key
PAYSTACK_PUBLIC_KEY=pk_test_your-key
PAYSTACK_WEBHOOK_SECRET=your-webhook-secret

# Payments - Yoco (South Africa)
YOCO_SECRET_KEY=sk_test_your-key
YOCO_WEBHOOK_SECRET=your-webhook-secret

# Google Maps
GOOGLE_MAPS_API_KEY=your-maps-api-key
GOOGLE_GEOCODING_API_KEY=your-geocoding-api-key

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+27XXXXXXXXX

# Redis
REDIS_URL=redis://localhost:6379

# Monitoring
GLITCHTIP_DSN=https://your-dsn@app.glitchtip.com/project-id
POSTHOG_API_KEY=phc_your-key
POSTHOG_HOST=https://app.posthog.com

# Groq (Nduna chatbot - comma-separated for rotation)
GROQ_API_KEYS=key1,key2,key3

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# ===== DO NOT CHANGE =====
# Docker defaults (override in .env if needed)
MONGO_PASSWORD=ihhashi_dev_2024
